<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/accent_material_dark"
    android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgViewContactImage"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/car"
                android:background="@drawable/estilos_imageview"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/lblMatricula"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="MATRICULA A MODIFICAR"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entradaMatricula"
                android:textSize="25dp"
                android:background="@drawable/estilo"
                android:layout_width="601dp"
                android:layout_height="35dp">
                <requestFocus />
            </EditText>
            <TextView
                android:id="@+id/lblMarca"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="MARCA A MODIFICAR"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entradaMarca"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:background="@drawable/estilo"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/lblModelo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="MODELO A MODIFICAR"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entradaModelo"
                android:textSize="25dp"
                android:background="@drawable/estilo"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/lblMotorizacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="MOTORIZACION A MODIFICAR"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnMotorizacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblCilindrada"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:text="CILINDRADA A MODIFICAR"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entradaCilindrada"
                android:layout_width="match_parent"
                android:textSize="25dp"
                android:background="@drawable/estilo"
                android:inputType="number"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/lblFechaCompra"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FECHA COMPRA A MODIFICAR"
                android:textSize="20dp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:endYear="2100"
                android:startYear="1950"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:calendarViewShown="false" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnAÃ±adir"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/estilos_botones"
                        android:onClick="onClick"
                        android:text="Modificar" />

                    <Button
                        android:id="@+id/btnCancelar"
                        android:layout_width="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/estilos_botones"
                        android:onClick="onClickCancelar"
                        android:text="Cancelar" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
